<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kench.petfolio.MedHistoryActivity">

    <ListView
        android:id="@+id/list_med"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Empty View for this list -->
    <RelativeLayout
        android:id="@+id/empty_view_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/empty_title_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:text="@string/empty_message"
            android:textAppearance="?android:textAppearance" />

        <TextView
            android:id="@+id/empty_subtitle_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_title_med"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:text="@string/sub_empty_message"
            android:textAppearance="?android:textAppearance" />
    </RelativeLayout>

